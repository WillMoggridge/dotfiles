#!/usr/bin/env bash

. $HOME/.dotfiles/libs/common

# To do, work out correct sink
is_env desktop && SINK_NAME="alsa_output.pci-0000_09_04.0.analog-stereo"
is_env laptop && SINK_NAME="alsa_output.pci-0000_00_1b.0.analog-stereo"

VOL_NOW=`pacmd dump | grep -P "^set-sink-volume $SINK_NAME\s+" | perl -p -e 's/.+\s(.x.+)$/$1/'`

echo $VOL_NOW
exit
