#!/usr/bin/env bash
if [ ! -d ~/.local/share/applications/dotfiles ]; then
    mkdir -p ~/.local/share/applications
    ln -s ~/.dotfiles/applications ~/.local/share/applications/dotfiles
fi

mkdir -p ~/.config

ln -s ~/.dotfiles/dotfiles/.config/alacritty ~/.config/
ln -s ~/.dotfiles/dotfiles/.config/dunst ~/.config/
ln -s ~/.dotfiles/dotfiles/.config/gsimplecal ~/.config/
ln -s ~/.dotfiles/dotfiles/.config/nvim ~/.config/
ln -s ~/.dotfiles/dotfiles/.config/fontconfig ~/.config/

ln -s ~/.dotfiles/dotfiles/.config/compton.conf ~/.config/

ln -s ~/.dotfiles/dotfiles/.aliases.d ~/
ln -s ~/.dotfiles/dotfiles/.bash ~/
ln -s ~/.dotfiles/dotfiles/.i3 ~/
ln -s ~/.dotfiles/dotfiles/.tmux ~/
ln -s ~/.dotfiles/dotfiles/.zsh ~/

ln -s ~/.dotfiles/dotfiles/.aliases ~/
ln -s ~/.dotfiles/dotfiles/.bashrc ~/
ln -s ~/.dotfiles/dotfiles/.gitconfig ~/
ln -s ~/.dotfiles/dotfiles/.gitignore_global ~/
ln -s ~/.dotfiles/dotfiles/.lessfilter ~/
ln -s ~/.dotfiles/dotfiles/.profile ~/
ln -s ~/.dotfiles/dotfiles/.taskrc ~/
ln -s ~/.dotfiles/dotfiles/.tmux.conf ~/
ln -s ~/.dotfiles/dotfiles/.Xmodmap ~/
ln -s ~/.dotfiles/dotfiles/.Xresources ~/
ln -s ~/.dotfiles/dotfiles/.xserverrc ~/
ln -s ~/.dotfiles/dotfiles/.xprofile ~/
ln -s ~/.dotfiles/dotfiles/.zsh-theme ~/
ln -s ~/.dotfiles/dotfiles/.bullet-train.zsh-theme ~/
ln -s ~/.dotfiles/dotfiles/.zshenv ~/
ln -s ~/.dotfiles/dotfiles/.zshrc ~/

if [ ! -d ~/.config/sublime-text-3/Packages/User ]; then
    ln -s ~/.dotfiles/dotfiles/sublime-text-3-preferences ~/.config/sublime-text-3/Packages/User
fi

if [ ! -d ~/.i3-contrib ]; then
    git clone https://github.com/vivien/i3blocks-contrib.git ~/.i3-contrib
fi
if [ ! -d ~/.oh-my-zsh ]; then
    git clone https://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh
fi
if [ ! -d ~/.tmux/plugins/tpm ]; then
    git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
fi
if [ ! -d ~/.tmuxifier ]; then
    git clone https://github.com/jimeh/tmuxifier.git ~/.tmuxifier
fi
