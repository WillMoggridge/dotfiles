#!/bin/sh
lock() {
    killall -SIGUSR1 dunst # Pause notifications
    xautolock -disable
    i3lock --nofork --dpms -c 000000
    xautolock -enable
    killall -SIGUSR2 dunst # Resume notifications
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock &
        systemctl suspend
        ;;
    hibernate)
        lock &
        systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
