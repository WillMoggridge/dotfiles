#!/usr/bin/env bash
lock-pre() {
    killall -SIGUSR1 dunst # Pause notifications
    xautolock -disable
}
lock-command() {
    i3lock --nofork --dpms -c 000000
}
lock-post() {
    xautolock -enable
    killall -SIGUSR2 dunst # Resume notifications
}
lock() {
    lock-pre
    lock-command
    lock-post
}


case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock-pre
        lock-command &
        systemctl suspend
        wait
        lock-post
        ;;
    hibernate)
        lock-pre
        lock-command &
        systemctl hibernate
        wait
        lock-post
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
