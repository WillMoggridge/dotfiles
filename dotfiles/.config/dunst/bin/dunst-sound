#!/usr/bin/env bash

NORMAL_SOUND="--volume 0.3 $HOME/Dropbox/Sync/sounds/notifications/Knock.wav"
CRITICAL_SOUND="--volume 0.5 $HOME/Dropbox/Sync/sounds/notifications/Hojus.ogg"

APPNAME="$1"
SUMMARY="$2"
BODY="$3"
ICON="$4"
URGENCY="$5"

if [ $URGENCY = "NORMAL" ]; then
    play -q $NORMAL_SOUND &
fi
if [ $URGENCY = "CRITICAL" ]; then
    play -q $CRITICAL_SOUND &
fi
